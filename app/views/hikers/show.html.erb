<div id="hikers">
  <div class="well">
    <h2><%= @hiker.name %></h2>
    <h3><%= @hiker.nickname %></h3>
    <% if @current_user %>
      <button id="edit_user_details" class="btn btn-lg btn-primary">Edit User Details</button>
    <% end %>
  </div>

  <div class="well">
    <h3>Details</h3><br>
  </div>

  <div class="well">
    <h3>Personal Records</h3>
  </div>

  <div class="well">
    <h3><%= @hiker.name %>'s Hikes</h3>
    <div id="upcoming_hikes">
      <h4>Upcoming Hikes</h4>
    </div>
    <div id="complete_hikes">
      <h4>Past Hikes</h4>
    </div>
  </div>
</div>